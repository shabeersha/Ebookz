<div class="container mt-5 mb-3">
    <div class="row">
      <div class="col-12">
          <h2 class="text-monospace">Search Authors</h2>

            <form action="/authors" method="GET">
                <div class="input-group">
                    <input class="form-control col-md-4" type="text" placeholder="Enter Author Name" name="name" value="" pattern="[A-Za-z\s]" title="Please Enter atleast two Letters" required>
                    <div class="input-group-append" id="button-addon4">
                        <button class="btn btn-info" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <% authors.forEach(author => { %>
            <div class="col-12"> <%= author.name %> </div>
            
        <% }); %> 

    </div>
</div>